<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/backgroundColor"
                android:gravity="center"
                tools:context="com.leaditteam.qrscanner.activities.LoginActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/card_v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="26dp"
        app:cardBackgroundColor="@color/colorPrimary"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:id="@+id/lr_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_input_email"
                    style="@style/TextLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/log_in_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:drawablePadding="6dp"
                        android:ems="7"
                        android:hint="Электронная почта"
                        android:inputType="textEmailAddress"
                        android:text="admin@admin.com"
                        android:textColorHint="@color/backgroundColor"
                        android:textSize="16sp"
                        android:theme="@style/AppTheme"/>

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_input_pass"
                    style="@style/TextLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/log_in_pass"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="6dp"
                        android:ems="7"

                        android:hint="Пароль"
                        android:inputType="textPassword"
                        android:text="16admin"
                        android:textSize="16sp"
                        android:theme="@style/AppTheme"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/textView_login_autorizationFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="ЛОГИН"
                android:textColor="#212121"
                android:textStyle="bold"/>

        </LinearLayout>

        <View
            android:id="@+id/circle"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@id/card_v"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="40dp"
            android:alpha="0.3"
            android:background="@drawable/circle"
            android:visibility="invisible"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>
